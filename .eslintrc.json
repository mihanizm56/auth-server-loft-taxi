{
    "parser": "babel-eslint",
    "ecmaFeatures": {
        "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
        "arrowFunctions": true,
        "defaultParams": true
      }
    },
    "env" : {
        "browser" : true,
        "node" : true,
        "es6" : true
    },
    "rules" : {
        "no-unused-vars" : 2,
        "no-undef" : 2
    },
    "parserOptions": {
        "sourceType": "module"
    }
}